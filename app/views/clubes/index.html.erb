<%- model_class = Clube -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:descrição) %></th>
      <th><%= model_class.human_attribute_name(:presidente) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:criado) %></th>

    </tr>
  </thead>
  <tbody>
    <% @clubes.each do |clube| %>
      <tr>
        <td><%= link_to clube.id, clube_path(clube) %></td>
        <td><%= clube.nome %></td>
        <td><%= clube.descricao %></td>
        <td><%= clube.presidente %></td>
        <td><%= clube.email %></td>
        <td><%=l clube.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.mostrar")),
                      clube_path(clube), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_clube_path(clube), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.deletar")),
                      clube_path(clube),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_clube_path,
            :class => 'btn btn-primary' %>
